    "queries": [
        {
            "label": "All orders (IDs only)",
            "query": "SELECT c.id, c.customerId, c.productId, c.totalAmount, c.status FROM c WHERE c.type = 'order'"
        },
        {
            "label": "All customers",
            "query": "SELECT c.id, c.name, c.email, c.loyaltyTier FROM c WHERE c.type = 'customer'"
        },
        {
            "label": "All products",
            "query": "SELECT c.id, c.name, c.price, c.inStock FROM c WHERE c.type = 'product'"
        },
        {
            "label": "Orders by specific customer",
            "query": "SELECT c.id, c.orderDate, c.productId, c.totalAmount, c.status FROM c WHERE c.type = 'order' AND c.customerId = 'customer-001'"
        },
        {
            "label": "Orders for specific product",
            "query": "SELECT c.id, c.customerId, c.quantity, c.totalAmount, c.orderDate FROM c WHERE c.type = 'order' AND c.productId = 'product-001'"
        },
        {
            "label": "High-value orders (>$500)",
            "query": "SELECT c.id, c.customerId, c.productId, c.totalAmount, c.orderDate FROM c WHERE c.type = 'order' AND c.totalAmount > 500"
        },
        {
            "label": "Orders in February 2024",
            "query": "SELECT c.id, c.customerId, c.totalAmount, c.orderDate FROM c WHERE c.type = 'order' AND c.orderDate >= '2024-02-01' AND c.orderDate < '2024-03-01'"
        },
        {
            "label": "Gold tier customers",
            "query": "SELECT c.id, c.name, c.email, c.loyaltyTier, c.memberSince FROM c WHERE c.type = 'customer' AND c.loyaltyTier = 'gold'"
        }
    ]
